generator client {
  provider = "prisma-client"
  output   = "../src/generated"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid(7)) @db.Uuid
  name String
  nickname String
  email String @unique
  password String
  profile_photo String?
}

model Book {
  id String @id @default(uuid(7)) @db.Uuid
  title String
  category String
  price  Decimal @db.Decimal(10, 2)
  description String
  cover String
}

